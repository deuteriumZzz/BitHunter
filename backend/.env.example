# Django settings
# Секретный ключ для шифрования сессий и токенов. Генерируйте уникальный: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY='django-insecure-92x8edvb+-(rfv4a(chl11sxu@5eaxljlso6(xa-+@)la1545x'

# Режим отладки: True для разработки, False для продакшена
DEBUG=True

# Ключ для шифрования API-ключей (из старого кода). Генерируйте: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-fernet-key-here

# API-ключи для внешних сервисов (из старого кода)
# Ключ для NewsAPI (для анализа новостей): Получите на https://newsapi.org
NEWS_API_KEY=your-news-api-key

# Токен Telegram-бота (для уведомлений): Создайте бота через @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ID чата Telegram (для отправки сообщений): Получите через @userinfobot или API
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Настройки бота (из старого main_bot.py)
# Демо-режим: True для тестов, False для реальной торговли
DEMO_MODE=True

# Максимальная сумма для торговли (в BTC/USDT)
MAX_AMOUNT=0.001

# Настройки базы данных (если используете Postgres вместо SQLite)
# Имя базы данных
POSTGRES_DB=bithunter

# Пользователь базы данных
POSTGRES_USER=user

# Пароль базы данных
POSTGRES_PASSWORD=pass

# Хост базы данных (из docker-compose.yml)
POSTGRES_HOST=db

# Порт базы данных
POSTGRES_PORT=5432
